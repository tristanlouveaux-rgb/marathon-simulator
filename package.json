{
  "name": "marathon-simulator",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:ios": "npm run build && npx cap sync ios",
    "open:ios": "npx cap open ios",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
